mixin postInfo(item)
    if is_post()
        .post-info
            .post-info-profile
                a(href=url_for(theme.profile_url) target="_blank")
                    img(src=url_for(theme.profile))
            .post-info-details
                .post-categories
                    if item.categories && item.categories.length
                        each category in item.categories.data
                            a(href=url_for('/categories/' + category.name) target="_self")
                                span!= category.name.toUpperCase()
                .post-date
                    != full_date(item.date, 'll') + __('date_desc')
    else if is_home()
        .post-info
    else if is_archive() || is_category()
        .post-info
            .post-date
                != full_date(item.date, 'll')
                                                    
//- Index Page
mixin posts
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    a.read-more(href= url_for(item.path))!= __('more')
        - })

//- Archive Page
mixin postList
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change
                h2.archive-year!= year
            .post-item
                +postInfo(item)
                a.post-title-link(href= url_for(item.path))
                    != item.title
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                != item.title
            +postInfo(item)
            .post-content
                != item.content
